@{
    var startDate = new DateTime(2020, 08, 23).Date;
    var endDate = new DateTime(2021, 09, 07).Date;
}

<h1 class="is-title is-size-1 has-text-centered mt-5">Kinderwarenbasar Neufelden</h1>

<div class="columns mt-5">
    <div class="column is-half has-text-centered">
        <h2 class="is-title is-size-3">10. – 11. September 2021</h2>
    </div>
    <div class="column is-half has-text-centered">
        <h2 class="is-title is-size-3">Turnsaal der Volksschule Neufelden<br/>Marktplatz 12, 4120 Neufelden</h2>
    </div>
</div>


<div class="columns">
    <div class="column is-half">
        <h3 class="is-title is-size-5 mt-5">
            Annahme der vorab eingeschriebenen Artikel
        </h3>
        <p>
            Donnerstag, 9. September 2021 von 17 bis 19:30 Uhr
        </p>
    </div>
    <div class="column is-half">
        <h3 class="is-title is-size-5">
            Verkauf
        </h3>
        <p>
            Freitag, 10. September 2021 von 18 bis 19:30 Uhr<br/>
            Samstag, 11. September 2021 von 9 bis 11 Uhr
        </p>
    </div>
</div>


<div class="columns">
    <div class="column is-half">
        <h3 class="is-title is-size-5">
            Abholung der nicht verkauften Waren
        </h3>
        <p>
            Samstag, 11. September 2021 von 16 bis 17 Uhr
        </p>
    </div>
    <div class="column is-half">
        <h3 class="is-title is-size-5 mt-5">
            Derzeitige Corona-Maßnahmen
        </h3>
        <p>
            Eintritt für max. 99 Personen gleichzeitig<br/>
            3-G-Regel
        </p>
    </div>
</div>

<div class="columns">
    <div class="column">
        <h3 class="is-title is-size-5">
            Diesen Artikeln geben wir gerne eine 2. Chance
        </h3>
        <span class="tag is-success">Alles rund ums Baby</span>
        <span class="tag is-success">Spielsachen</span>
        <span class="tag is-success">Wintersportartikel</span>
        <span class="tag is-success">Kinderbekleidung bis Größe 164</span>
        <span class="tag is-success">Bücher</span>
        <span class="tag is-success">Kinderwägen</span>
        <span class="tag is-success">Umstandsmode</span>
        <span class="tag is-success">Kinderfahrzeuge</span>
        <span class="tag is-success">Autositze</span>
        <span class="tag is-success">Faschingsbekleidung</span>
        <span class="tag is-success">Schaukelpferde</span>
        <span class="tag is-success">Hochstühle</span>
        <span class="tag is-success">Schuhe</span>
    </div>
</div>

<div class="columns pt-5 pb-5">
    <div class="column is-two-thirds">
        <p class="alert is-warning">
            Die Onlineeinschreibung ist von Montag, 23. August 2021 bis Dienstag, 7. September 2021 möglich
        </p>
    </div>
    <div class="column is-one-third">
        @if (DateTime.UtcNow.Date >= startDate && DateTime.UtcNow.Date <= endDate)
        {
            <p>
                <a asp-action="Register" asp-controller="Home" class="button is-info is-large is-fullwidth">Jetzt online einschreiben</a>
            </p>
        }
    </div>
</div>


<div class="columns">
    <div class="column">
        <h3 class="is-title is-size-5">
            Einschreibgebühr
        </h3>
        <p>
            10 Cent pro Artikel bzw 1 Euro ab einem Verkaufswert von 25 Euro.<br/>
            10% vom Erlös werden einbehalten.
        </p>
    </div>
</div>

<div class="columns">
    <div class="column">
        <h3 class="is-title is-size-5">

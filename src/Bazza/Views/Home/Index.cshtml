@{
    var startDate = new DateTime(2021, 08, 23).Date;
    var endDate = new DateTime(2021, 09, 07).Date;
}

<div style="background-image: url('/images/title.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center; padding-top: 300px; margin: 0 -.5rem;">
    <div style="background-color: rgba(255,255,255,0.75); ">
        <h1 class="is-title is-size-1 has-text-centered mt-5">Kinder&shy;waren&shy;basar Neufelden</h1>

        <div class="columns mt-5">
            <div class="column is-half has-text-centered">
                <h2 class="is-title is-size-3">10. – 11. September 2021</h2>
            </div>
            <div class="column is-half has-text-centered">
                <h2 class="is-title is-size-3">Turnsaal der Volksschule Neufelden<br/>Marktplatz 12, 4120 Neufelden</h2>
            </div>
        </div>
    </div>
</div>

<div class="columns mt-5">
    <div class="column">
        <h3 class="is-title is-size-5">
            Annahme der vorab eingeschriebenen Artikel
        </h3>
        <p>
            Donnerstag, 9. September 2021 von 17 bis 19:30 Uhr
        </p>
    </div>
</div>


<div class="columns mt-5">
    <div class="column">
        <h3 class="is-title is-size-5">
            Verkauf
        </h3>
        <p>
            Freitag, 10. September 2021 von 18 bis 19:30 Uhr<br/>
            Samstag, 11. September 2021 von 9 bis 11 Uhr
        </p>
    </div>
</div>


<div class="columns mt-5">
    <div class="column">
        <h3 class="is-title is-size-5">
            Abholung der nicht verkauften Waren
        </h3>
        <p>
            Samstag, 11. September 2021 von 16 bis 17 Uhr
        </p>
    </div>
    <div class="column">
        <h3 class="is-title is-size-5">
            Derzeitige Corona-Maßnahmen
        </h3>
        <p>
            3-G-Regel
        </p>
    </div>
</div>

<div class="columns">
    <div class="column">
        <img src="~/images/logo.jpg" alt="Mütterrunde Logo" style="width:100%; max-width:200px; margin:2rem auto; display:block;"/>
    </div>
    <div class="column">
        <h3 class="is-title is-size-5">
            Diesen Artikeln geben wir gerne eine 2. Chance
        </h3>
        <ul>
            <li>&#x2713; Alles rund ums Baby</li>
            <li>&#x2713; Spielsachen</li>
            <li>&#x2713; Wintersportartikel</li>
            <li>&#x2713; Kinderbekleidung bis Größe 164</li>
            <li>&#x2713; Schuhe</li>
            <li>&#x2713; Bücher</li>
            <li>&#x2713; Kinderwägen</li>
            <li>&#x2713; Umstandsmode</li>
            <li>&#x2713; Kinderfahrzeuge</li>
            <li>&#x2713; Autositze</li>
            <li>&#x2713; Faschingsbekleidung</li>
            <li>&#x2713; Schaukelpferde</li>
            <li>&#x2713; Hochstühle</li>
        </ul>
    </div>
</div>

@if (DateTime.UtcNow.Date >= startDate && DateTime.UtcNow.Date <= endDate)
{
    <div class="columns pt-5 pb-5">
        <div class="column is-two-thirds">
            <p>
                Die Onlineeinschreibung ist von Montag, 23. August 2021 bis Dienstag, 7. September 2021 möglich
            </p>
        </div>
        <div class="column is-one-third">
            <p>
                <a asp-action="Register" asp-controller="Home" class="button is-info is-large is-fullwidth">Jetzt online einschreiben</a>
            </p>
        </div>
    </div>
} else {
    <div class="columns pt-5 pb-5">
        <div class="column">
            <p class="notification is-warning">
                Die Onlineeinschreibung ist von Montag, 23. August 2021 bis Dienstag, 7. September 2021 möglich
            </p>
        </div>
    </div>
}


<div class="columns">
    <div class="column">
        <h3 class="is-title is-size-5">
            Einschreibgebühr
        </h3>
        <p>
            10 Cent pro Artikel bzw 1 Euro ab einem Verkaufswert von 25 Euro.<br/>
            10% vom Erlös werden einbehalten.
        </p>
    </div>
</div>

